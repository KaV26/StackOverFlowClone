@model StackOverFlow.ViewModels.EditUserModel

@{
    ViewBag.Title = "Change Profile";
}
<div class="row" style="margin-top: -42px;" >
    <div class="col-sm-12 login-box mx-auto"  style="width:600px; text-align:center;">
        <h1 style=" font-size: 1.8rem; padding-bottom:8px;">Change Profile</h1>
        <form novalidate="novalidate" action="/account/changeprofile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName"><strong>Name</strong></label>
                    <input type="text" style=" text-align: center; margin: auto;" class="form-control" id="txtName" placeholder="Enter name" name="Name" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.Name" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>

            <div class="form-row">
                @*<div class="form-group col-sm-12">
                    <label for="txtEmail"><strong>Email</strong></label>
                    <input type="text" style=" text-align: center; margin: auto;" class="form-control" id="email" placeholder="Enter email" name="Email" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.Email" />

                    @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                </div>*@
                <div class="form-group col-sm-12">
                    <label for="txtEmail"><strong>Email</strong></label>
                    <input type="email" style=" text-align: center; margin: auto;" class="form-control" id="txtEmail" placeholder="Enter Mail Id" name="Email" required="required" />
                    @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid email
                    </div>
                    <small class="email-exist text-danger"></small>
                </div>

                <div class="form-group col-sm-12">
                    <label for="txtMobile"><strong>Mobile</strong></label>
                    <input type="text" style=" text-align: center; margin: auto;" class="form-control" id="txtMobile" placeholder="Mobile" name="Mobile" required="required" pattern="^[789]\d{9}$" value="@Model.Mobile" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
            </div>

            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary" style=" text-align: center; margin: auto;">Update Profile</button>
        </form>
    </div>
</div>

<script>

    $("a[href='/account/changeprofile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false)
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>


